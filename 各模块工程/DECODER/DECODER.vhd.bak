LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY DECODER IS
	PORT(a: IN STD_LOGIC_VECTOR(3 DOWNTO 0);
		 hex: OUT STD_LOGIC_VECTOR(6 DOWNTO 0));
END DECODER;

ARCHITECTURE HH OF DECODER IS
BEGIN
	PROCESS(a)
		BEGIN
			CASE a IS
				WHEN "0000"=>hex<="0111111";
				WHEN "0001"=>hex<="0000110";
				WHEN "0010"=>hex<="1011011";
				WHEN "0011"=>hex<="1001111";
				WHEN "0100"=>hex<="1100110";
				WHEN "0101"=>hex<="1101101";
				WHEN "0110"=>hex<="1111101";
				WHEN "0111"=>hex<="0000111";
				WHEN "1000"=>hex<="1111111";
				WHEN "1001"=>hex<="1101111";
				WHEN others=>hex<="1111111";
			END CASE;
	END PROCESS;
END HH;